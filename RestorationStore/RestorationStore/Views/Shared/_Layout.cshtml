<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="templatemo_container">
        <div id="templatemo_header">
            <div id="templatemo_header_logo">
                <div id="templatemo_header_slogan">
                    <h4 class="titlepage"> Restoration Store</h4>
                </div>

                <div id="templatemo_search">
                    <form action="#" method="post">
                        <ul>
                           
                        </ul>
                    </form>
                </div>
            </div>
            <div id="templatemo_menu">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Completed requests", "GetAllResponses", "Response")</li>
                    <li>@Html.ActionLink("Create Request", "Index", "Request")</li>
                    @if(Session["UserRole"] == null) {
                        <li>@Html.ActionLink("Log In", "Login", "Account")</li>
                    } else {
                        
                        <li>@Html.ActionLink("Requests Pendings", "Index", "RequestPending")</li>
                        if("ShopOwner".Equals((String)Session["UserRole"])) {
                            <li>@Html.ActionLink("Sales Reports", "Index", "Graphic")</li>
                        }
                        <li>@Html.ActionLink("Log Out", "LogOut", "Account")</li>
                    }
                </ul>
            </div>
        </div>
        <div class="templatemo_section_1">
            <div class="templatemo_section_1_contentarea">
                @RenderBody()
            </div>
            <div class="cleaner"></div>
            <div class="templatemo_section_1_bottom">
            </div>
        </div>
        <div class="cleaner"></div>
        <div id="templatemo_footer">
            Copyright © 1988 @Html.ActionLink("Restoration Store Company", "Index", "Home")
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
