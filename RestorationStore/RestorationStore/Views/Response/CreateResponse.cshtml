@model RestorationStore.Domain.Model.Respons

@{
    ViewBag.Title = "Create Response";
}
@section scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/Validation/ImageSize.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
<h2>Create Response</h2>
    <div >
        <div id="pan_izquierdo">
@using(Html.BeginForm("CreateResponse", "Response",
    FormMethod.Post,
    new { enctype = "multipart/form-data" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        @Html.Hidden("id_request", Model.Id_Request)
            <legend>Respons</legend>
            <div class="editor-label">
                @Html.LabelFor(model => model.Cost)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Cost)
                @Html.ValidationMessageFor(model => model.Cost)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Description)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <div class="editor-field">
                <div>Load final image: <input id="upload-file" type="file" name="Image" accept="image/png,image/jpeg" /></div>
            </div>
            <p>
                <input type="submit" value="Create" />
            </p>
        </fieldset>
}
    <div>
        @* @Html.ActionLink("Back to List", "Index")*@
    </div>
        </div>

        <div id="pan_centro">
            <fieldset>
                <legend>Request</legend>
                <div>
                    @Html.Partial("~/Views/Request/DetailRequestFullPartial.cshtml", Model.Request)
                </div>
            </fieldset>
</div>
    </div>